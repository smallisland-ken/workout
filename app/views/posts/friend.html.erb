<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <div class="mt-3 sticky-top">
                <% if @friend == current_user %>
                    <h2><i>My Profile</i></h2>
                <% else %>
                    <h2><i>Friend's Profile</i></h2>
                <% end %>
                    <%= render "posts/profile", profile: @friend %>
            </div>
        </div>
        <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto mt-3">
            <% if @friend == current_user %>
                <h2><i>My Timeline</i></h2>
            <% else %>
                 <h2><i>Friend's Timeline</i></h2>
            <% end %>
            <% @friend_post.each do |post| %>
                <div class="card w-100 mx-auto mt-4 shadow-lg">
                   <div class="slider">
                        <% post.post_images.each do |image| %>
                            <%= link_to post_path(post) do %>
                                <%= attachment_image_tag image, :image, class:"card-img-top"; %>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-3 text-center">
                                <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", size: '70x70', class:"mt-3 rounded-circle"; %>
                            <p class="mt-2">
                            <div class="allign-center"><%= post.user.nickname %></div>
                            </p>
                            </div>
                            <div class="col-7">
                                <p class="card-title"></p>
                                <div>
                                    <div class="far fa-comment mr-1"> <%= post.comments.count %> comments</div>
                                    <div class="far fa-thumbs-up ml-2">
                                    <span id="likes_<%= post.id %>"><%= render partial: 'likes/like', locals: {post: post}%></span>
                                    likes</div> 
                                    <br><div class="far fa-eye mr-1"> <%=  post.impressionist_count %> views</div>
                                </div>
                                 <div class="mt-3">
                                <%= link_to post_path(post) do %>
                                    投稿日：<%= post.date_on %>
                                <% end %>
                                </div>  
                                <div class="mt-1">
                                    タイトル：<%= post.title %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
