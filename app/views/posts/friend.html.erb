<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="mt-3 sticky-top">
                <% if @friend == current_user %>
                    <h2><i>My Profile</i></h2>
                <% else %>
                    <h2><i>Friend's Profile</i></h2>
                <% end %>
                    <%= render "posts/profile", profile: @friend %>
            </div>
        </div>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
            <% if @friend == current_user %>
                <h2><i>My Timeline</i></h2>
            <% else %>
                 <h2><i>Friend's Timeline</i></h2>
            <% end %>
            <% @friend_post.each do |post| %>
                <div class="card w-70 mx-auto mt-4 shadow-lg">
                    <%= link_to post_path(post) do %>
                        <%= attachment_image_tag post, :image, class:"card-img-top"; %>
                    <% end %>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                            </div>
                            <div class="col-10">
                                <p class="card-title"></p>
                                <div>
                                    <i class="far fa-smile"></i> <%= post.user.nickname %>
                                    <br><i class="far fa-comment"></i> Comments：<%= post.comments.count %> <i class="far fa-thumbs-up"></i> Likes： 
                                    <span id="likes_<%= post.id %>"><%= render partial: 'likes/like', locals: {post: post}%></span>
                                </div>
                                <div class="fas fa-tags mt-2">
                                    <%= post.tags.pluck(:name).join(',') %>
                                </div>
                                <div class="mt-2">
                                <%= post.content %>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
      </div>
    </div>
</div>
