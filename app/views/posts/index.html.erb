<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>投稿内容</h2>
             <% @posts.each do |post| %>
                <div class="card w-50 mx-auto mt-4 shadow-lg">
                    <%= link_to post_path(post) do %>
                        <%= attachment_image_tag post, :image, class:"card-img-top"; %>
                    <% end %>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                            </div>
                            <div class="col-10">
                                <p class="card-title">
                                
                                </p>
                                <span><i class="fas fa-user"></i> By <%= post.user.nickname %> </span>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
      </div>
    </div>
</div>
