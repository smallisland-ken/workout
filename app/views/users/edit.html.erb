<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 mt-3 mx-auto">
            <h2>マイページ</h2>
            
            <!--ここからエラーメッセージ-->
            <% if @user.errors.any? %>
            <div id="error_explanation">
                <div class="error"><%= pluralize(@user.errors.count, "error") %> 
                    prohibited this product from being saved:
                </div>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <!--ここまでエラーメッセージ-->
                
           <%= form_with model:@user, local:true do |f| %>
                <div class="form-group mt-3">
                    <label>ニックネーム</label>
                    <%= f.text_field :nickname, autofocus: true, class: "form-control name" %>
                </div>
               
                <div class="form-group">
                <label>プロフ画像</label>
                    <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
                </div>
               
                <div class="form-group">
                <label>身長</label>
                    <%= f.text_field :height , class: "form-control-file " %>
                </div>
               
                <div class="form-group">
                <label>体重</label>
                    <%= f.text_field :weight , class: "form-control-file " %>
                </div>
                
                <div class="form-group">
                <label>自己紹介</label>
                    <%= f.text_area :introduction , class: "form-control-file " %>
                </div>
              
                <div class="form-group">
                    <%= f.submit "Update User", class: "btn btn-secondary" %>
                </div>
            <% end %>
        </div>
      </div>
    </div>
</div>
