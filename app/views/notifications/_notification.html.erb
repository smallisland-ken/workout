<% notifications.each do |notification| %>
  <% visitor = notification.visitor %>
    <%= link_to friend_posts_path(notification.visitor), class:"mr-3" do %>
      <%= attachment_image_tag visitor, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "45x45", class:"mt-3 rounded-circle"; %>
    <% end %>
    <div class="clearfix mt-1">
    <%= notification_form(notification) %>
    <div class="text-left">
      (<%= "#{time_ago_in_words(notification.created_at)}" %><%= t 'notifications.index.ago' %>)
     </div>
    <br>
    <% if !@comment.nil? %>
      <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
    <% end %>
  </div>
<% end %>