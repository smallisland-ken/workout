<% notifications.each do |notification| %>
  <% visitor = notification.visitor %>
  <div class="user-view clearfix ">
    <%= link_to user_path(notification.visitor) do %>
      <%= attachment_image_tag visitor, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle"; %>
    <% end %>
    <%= notification_form(notification) %><%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
    <br>
    <% if !@comment.nil? %>
      <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
    <% end %>
  </div>
<% end %>