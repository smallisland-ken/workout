<% if @users.exists? %>
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md7 col-lg-9 mt-3 mx-auto">
      <h2><i>Followings</i></h2>
      <div class="table-responsive">
        <table class="table mt-4"">
          <thead>
            <tr>
              <th class="text-center text-nowrap"><%= t 'favorites.followings.profile_image' %></th>
              <th class="text-center text-nowrap"><%= t 'favorites.followings.nickname' %></th>
              <th class="text-center text-nowrap"><%= t 'favorites.followings.follows' %></th>
              <th class="text-center text-nowrap"><%= t 'favorites.followings.followers' %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="text-center align-middle"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %></td>
                <td class="text-center align-middle"><%= user.nickname %></td>
                <td class="text-center align-middle"><%= user.followings.count %><%= t 'favorites.followings.following_people' %></td>
                <td class="text-center align-middle"><%= user.followers.count %><%= t 'favorites.followings.follower_people' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>